<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/image_back_arrow"
        android:layout_width="@dimen/small_button"
        android:layout_height="@dimen/small_button"
        android:layout_marginStart="@dimen/spacing_medium"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_title" />

    <TextView
        android:id="@+id/text_title"
        style="@style/SecondaryTextStyle.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_extra_large"
        android:text="@string/total_calories"
        app:layout_constraintStart_toEndOf="@+id/image_back_arrow"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_total_calories_ring"
        android:layout_width="@dimen/total_calories_ring_size"
        android:layout_height="@dimen/total_calories_ring_size"
        android:layout_marginTop="@dimen/spacing_extra_large"
        android:src="@drawable/ring"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />

    <TextView
        android:id="@+id/text_total_calories_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ExtraTextStyle"
        android:text="@string/_0"
        app:layout_constraintBottom_toTopOf="@+id/text_total_calories"
        app:layout_constraintEnd_toEndOf="@+id/image_total_calories_ring"
        app:layout_constraintStart_toStartOf="@+id/image_total_calories_ring"
        app:layout_constraintTop_toTopOf="@+id/image_total_calories_ring"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/text_total_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_too_small"
        style="@style/PrimaryTextStyle.Regular.Black"
        android:text="@string/total_calories"
        app:layout_constraintBottom_toBottomOf="@+id/image_total_calories_ring"
        app:layout_constraintEnd_toEndOf="@+id/image_total_calories_ring"
        app:layout_constraintStart_toStartOf="@+id/image_total_calories_ring"
        app:layout_constraintTop_toBottomOf="@+id/text_total_calories_value" />

    <Spinner
        android:id="@+id/spinner_meal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/special_height"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_extra_large"
        android:background="@drawable/rectangle_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_total_calories_ring" />

    <ImageView
        android:id="@+id/image_spinner_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:src="@drawable/ic_down_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_meal"
        app:layout_constraintEnd_toEndOf="@+id/spinner_meal"
        app:layout_constraintTop_toTopOf="@+id/spinner_meal" />

    <TextView
        android:id="@+id/text_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        style="@style/PrimaryTextStyle.Regular.Gray"
        android:text="@string/meal_name"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_meal"
        app:layout_constraintStart_toStartOf="@+id/spinner_meal"
        app:layout_constraintTop_toTopOf="@+id/spinner_meal" />

    <EditText
        android:id="@+id/edit_text_grams"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/special_height"
        android:layout_margin="@dimen/spacing_medium"
        android:background="@drawable/rectangle_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_meal" />

    <TextView
        android:id="@+id/text_grams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        style="@style/PrimaryTextStyle.Regular.Gray"
        android:text="@string/grams"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_grams"
        app:layout_constraintStart_toStartOf="@+id/edit_text_grams"
        app:layout_constraintTop_toTopOf="@+id/edit_text_grams" />

    <TextView
        android:id="@+id/text_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        style="@style/PrimaryTextStyle.Black"
        android:text="@string/g"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_grams"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_grams"
        app:layout_constraintTop_toTopOf="@+id/edit_text_grams" />

<!--    <TextView-->
<!--        style="@style/CaptionTextStyle.Red"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="You're out of normal daily range"-->
<!--        app:layout_constraintEnd_toEndOf="@+id/editText"-->
<!--        app:layout_constraintStart_toStartOf="@+id/editText"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/editText" />-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:paddingHorizontal="@dimen/spacing_large"
        android:paddingVertical="@dimen/spacing_small"
        android:background="@drawable/rectangle1"
        style="@style/PrimaryTextStyle.Regular.White"
        android:text="@string/add"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_grams" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_meals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_extra_large"
        app:cardCornerRadius="@dimen/spacing_medium"
        app:cardElevation="@dimen/zero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_add">

        <TextView
            android:id="@+id/text_meals_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            style="@style/PrimaryTextStyle.Black"
            android:text="@string/nothing_to_show" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_extra_large"
        android:paddingHorizontal="@dimen/spacing_large"
        android:paddingVertical="@dimen/spacing_small"
        android:background="@drawable/border"
        style="@style/PrimaryTextStyle.Regular.PrimaryColor"
        android:text="@string/reset"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>